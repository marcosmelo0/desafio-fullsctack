// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  name      String
  email     String    @unique
  password  String
  telephone String
  createdAt DateTime  @default(now())
  contacts   Contact[]

  @@map("users")
}

model Contact {
  id        String   @id
  name      String
  email     String   @unique
  telephone String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
